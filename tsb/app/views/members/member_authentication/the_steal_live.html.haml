#popup1.popupbox
  .sms_poup-close
  %div{:style=>"margin-top:100px;"}
    =form_tag('/sms/send_message', :remote => true, :method=>:get, :id=>"sms_form1") do 
      %p 10 digit cell number
      +1 - 
      = text_field_tag "mobile_number","", {:placeholder => "Mobile Number", :size => 22}
      = submit_tag 'Enter', :class => 'enterBtn',:style=>"margin-left:136px;margin-top:15px;"
#popup6.popupbox
  .sms_poup-close
  %div{:style=>"margin-top:100px;"}
    =form_tag('/sms/send_message', :remote => true, :method=>:get, :id=>"sms_form2") do 
      %p 10 digit cell number
      +1 - 
      = text_field_tag "mobile_number","", {:placeholder => "Mobile Number", :size => 22}
      = hidden_field_tag "steal_code","steal_code", {:placeholder => "Mobile Number", :size => 22}
      = submit_tag 'Enter', :class => 'enterBtn',:style=>"margin-left:136px;margin-top:15px;"
