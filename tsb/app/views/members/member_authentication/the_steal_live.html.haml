#main{:style => "padding-top:0px;padding-bottom:25px"}
  .steel-container
    .main-head
      The
      = succeed "teal" do
        %span S
    .osdg_steel_content_main
      .steal-wrapper
        .left-part-steel
          .t-shirt-off
            %img{:src => "#{@steal.steal_image.url(:steal)}"}/
          .left-part_txt_percenr_off
            %br/
            = @steal.description unless @steal.description.blank?
        .right-part
          .my-steel-head
            Send me my Steal
            %br/
            %span {for your codes safe keeping}
          .social-icon
            %a{:href => "javascript:void(0);"}
              %img{:border => "0", :src => "/images/mail.png",:onclick=>"sendmail_pop_up()"}/
            %a{:href => "#",:onclick=>"sms_pop_up_steal_code()"}
              %img{:border => "0", :src => "/images/sms.png"}/
          .my-steel-head
            Spread the Love
            %br/
            %span {be nice share with friends}
          .social-icon
            %a{:href => "javascript:void(0);"}
              %img{:border => "0", :src => "/images/mail.png",:onclick=>"sendmail_pop_up_below()"}/
            %a{:href => "#",:onclick=>"sms_pop_up()"}
              %img{:border => "0", :src => "/images/sms.png"}/
            %a{:href => "javascript:void(0);",:class=>"Ernestschwag_facebook_bttn"}
              %img{:border => "0", :src => "/images/facebook.png"}/
            %a{:href => "#{get_twitter_steal_url}"}
              %img{:border => "0", :src => "/images/twitter.png"}/
          .osdg_steelcode
            %div{:style=>"height: 79px;"}
              Steal Code:
              %div
                %table{:style=>"height: 70px;width: 307px;"}
                  %tr
                    %td{:style=>"height: 70px;width: 307px;vertical-align: middle;text-align: center;"}                  
                      %p.osdg_steelcode_bottom_txt
                        = @steal.code unless @steal.code.blank?
            %p.osdg_sono-link
              = link_to "#{@steal.e_commerce_link}", "#{@steal.e_commerce_link}", {:target=>"_blank"}
    %div{:style=>"margin-top:20px;"}
      = link_to image_tag("footer-icon.png"),"/members/thank_you_page"   
- fb_image_link = (@shwag_winner_looser_popup.fb_image.url(:medium) == "/images/fb_logo.jpg")? "http://staging.thestashbox.com/images/fb_logo.jpg" : @shwag_winner_looser_popup.fb_image.url(:medium)      
%img#fb_share_image{:alt => "Icon-facebook", :src => "#{fb_image_link}", :style => "display: none;"}/
