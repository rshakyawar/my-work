#main
  #middle_content
    .join_us_img
    = form_tag(member_survey_submit_code_path) do |f|
      .so_close_row
        .lock_img
        .I_have_bg
          .so_close_heading
          .I_have_content
            You are just a few steps away from entering the world of STASHBOX.  To proceed, please fill in your membership code below
            and away we'll go.
          .code_field_main
            .code_field
              = text_field_tag :membership_code,'' ,:class=>"code_field_bg", :autocomplete => "off", :placeholder => "Code",:id=>"membership_code_id"
        .lock_img2
        .clear
      .continue_bttn_row
        %input.continue_bttn_bg{:style=>"cursor:pointer;", :type => "button", :value => "SuBMIT",:onclick=>"this.form.submit();"}/
