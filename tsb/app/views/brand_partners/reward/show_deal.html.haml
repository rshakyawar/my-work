= javascript_include_tag 'fb_deal_steal'
:css
  .FBConnectButton_Simple, .FBConnectButton_RTL_Simple {
    background-image:url("/images/iconFbook.png");
    height: 30px;
    width: 34px;
    display: block;
    float: right
   }
   .tb, .t-count, .t-count a {
     background:url("../images/iconBird.png") no-repeat scroll 0 0 transparent;
   }
   .float_align{
     float:left;
   }
  .Ernestschwag_facebook_bttn {   
   	width:29px;  
   	height:34px;  
   	float:left;   
  }
  
  .Ernestschwag_facebook_bttn a {   
   	width:29px;   
   	height:29px;  
   	background:url("/images/ernestschwag_social_icons.png") no-repeat -3px -2px;   
   	display:block;  
  }    
#main
  #blockLeft
    %section.secOne
      #secOneBlock
        .tit The Deal Image
        =form_for(@deal, :url =>"/brand_partners/show_deal/#{@versus.id}",:method=>:put,:html =>{:id=>"deal_form",:enctype => "multipart/form-data",:multipart => true, :style => " top:0px; position: relative; z-index: 100; height: 0px;"}) do |f|
          %input#files{:size => "13", :type => "file", :style=>"opacity:0.0; filter:alpha(opacity=0);",:name=> "deal[deal_image]", :onchange=>"hide_image();"}
          %input{:type => "hidden",:value=>"",:name=>"removed",:id=>"is_removed"}/
          %input{:type => "hidden",:value=>"#{@versus.id}",:name=>"versus_id", :id=>"versus_id"}/
          %input{:type => "hidden",:value=>"#{ @deal.price || "$ The Deal Price"}",:name=>"deal[price]", :id=>"price_id"}/
          %input{:type => "hidden",:value=>"#{ @deal.description || "100 Character max"}",:name=>"deal[description]", :id=>"description_id"}/
          %input{:type => "hidden",:value=>"#{ @deal.code || "15 Character max"}",:name=>"deal[code]", :id=>"code_id"}/
          %input{:type => "hidden",:value=>"#{ @deal.e_commerce_link || "E-commerce link"}",:name=>"deal[e_commerce_link]", :id=>"e_commerce_link_id"}/
          %input{:size => "13", :type => "submit",:value=>"upload",:style=>"margin-left:100px;"}/
        .chooseImgBtn
        .chooseImgBtnNoBackground
        .chooseImgTxt image requirements
        .removeImg remove image
    %section.secFive
      #secFiveBlock
        .tit The Deal Details
        %form{:action => "", :id => "form_name", :method => "",:name => "form_name"}
          .zoomTxt
            %a{:href => "#"} The Deal Price
          %input#dealPrice.dealDeatilsInputBg{:name => "dealPrice", :size => "", :type => "text", :value => "#{ @deal.price || "$ The Deal Price"}"}
            .zoomTxt
              %a{:href => "#"} Item Description
            %input#itemDesc.dealDeatilsInputBg{:name => "itemDesc", :size => "", :type => "text", :value => "#{ @deal.description || "100 Character max"}",:onkeyup=>"if (this.value.length > 100) {  this.value = this.value.substr(0,100);}"}
              .zoomTxt
                %a{:href => "#"} The Deal Code
              %input#dealCode.dealDeatilsInputBg{:name => "dealCode", :size => "", :type => "text", :value => "#{ @deal.code || "15 Character max"}" ,:onkeyup=>"if (this.value.length > 15) {  this.value = this.value.substr(0,15);}"}
                .zoomTxt
                  %a{:href => "#"} E-Commerce Link
                %input#eComLink.dealDeatilsInputBg{:name => "eComLink", :size => "", :type => "text", :value => "#{ @deal.e_commerce_link || "E-commerce link"}"}
  #blockRight
    %section.secTwo
      #topBanner
        %img{:alt => "Top Banner", :src => "#{@product.top_banner.url(:medium)}"}/
      .dealBlock
        .dealBlockLeft
          .imgBlock
            .mapwrapper7
              #viewport7
                .current-map-layer{:style => "background: url('#{@deal.deal_image.url(:medium)}') no-repeat scroll 0% 0% transparent; width: 237px; height: 212px;"}
                %div{:style => "height:338px; width: 450px;"}
                  %img{:alt => "", :src => "#{@deal.deal_image.url(:medium)}"} 
                    .mapcontent
              #viewport{:style => "display: none;"}
                %img{:alt => "", :src => "img/1.gif"}/
          %textarea.dealPrice #{ @deal.price || "$ The Deal Price"}
          %textarea.itemDesc{:onkeyup=>"if (this.value.length > 100) {  this.value = this.value.substr(0,100);}"} #{(@deal.description.blank? or @deal.description.to_s == "100 Character max")? "Item Description" : @deal.description}
        .dealBlockRight
          .sendMeImgBlock
            .sendMeInnerBlock
              .sendMeTit SEND ME MY DEAL
              .iconBlock
                %ul
                  %li
                    %a{:href => "mailto:info@thestashbox.com"}
                      %img{:height => "33", :src => "/images/iconMail.png", :width => "33"}/
                  %li
                    %a{:href => "#"}
                      %img{:height => "33", :src => "/images/iconSms.png", :width => "33"}/
              .sendMeTit SPREAD THE LOVE
              .iconBlock
                %ul{:style=>"margin-left:30px;"}
                  %li.float_align
                    %a{:href => "mailto:info@thestashbox.com"}
                      %img{:height => "33", :src => "/images/iconMail.png", :width => "33"}/
                  %li.float_align
                    %a{:href => "#"}
                      %img{:height => "33", :src => "/images/iconSms.png", :width => "33"}/
                  %li.float_align
                    .Ernestschwag_facebook_bttn
                      %a{:href => "javascript:void(0);"}
                  %li.float_align
                    =link_to image_tag("/images/iconBird.png"), "https://twitter.com/share?original_referer=http%3A%2F%2Fthestashbox.com%2F&source=tweetbutton&text=The%20Stashbox%20-%20&url=http%3A%2F%2Fthestashbox.com%2F"                   
            %textarea.dealCode.codeEco{:onkeyup=>"if (this.value.length > 15) {  this.value = this.value.substr(0,15);}"} #{(@deal.code.blank? or @deal.code.to_s == "15 Character max")? "The Deal code" : @deal.code}
            %textarea.ecomLink.codeEco #{ @deal.e_commerce_link || "E-commerce link"}
    %section.secThree{:style=>"margin: 70px 0 0 15px;"}
      .ButtonBlock
        %input.saveBtnSty.btnPos{:name => "save", :type => "button",:onclick=>"save_and_submit();"}/
        %input.reviewVersusBtnSty.btnPos{:name => "Review My Versus", :type => "button"}/
%input#slider{:type => "hidden", :value => "0"}
= javascript_include_tag "reward_deal"
:javascript
  $(document).ready(function() {
    setPanelControls('#viewport7');
    setClearFields('#dealPrice', '.dealPrice', '#{ @deal.price || "$ The Deal Price"}','#{ @deal.price || "$ The Deal Price"}');
    setClearFields('#dealCode', '.dealCode', '#{ @deal.code || "15 Character max"}','#{ (@deal.code.blank? or @deal.code.to_s == "15 Character max")? "The Deal code" : @deal.code}');
    setClearFields('#itemDesc', '.itemDesc', '#{ @deal.description  || "100 Character max"}','#{(@deal.description.blank? or @deal.description.to_s == "100 Character max")? "Item Description" : @deal.description}');
    setClearFields('#eComLink', '.ecomLink', '#{ @deal.e_commerce_link || "E-commerce link"}','#{ @deal.e_commerce_link || "E-commerce link"}');
  });
