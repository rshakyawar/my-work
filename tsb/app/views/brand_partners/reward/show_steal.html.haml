#main
  #blockLeft{:style=>"width: 840px; margin-bottom: 20px;"}
    %section.secOne
      #secOneBlock
        .tit The Steal Image
        =form_for(@steal, :url =>"/brand_partners/show_steal/#{@versus.id}",:html =>  {:id=>"steal_form",:enctype => "multipart/form-data",:multipart => true, :style => " top:0px; position: relative; z-index: 100; height: 0px;"}) do |f|
          %input#files{:size => "13", :type => "file", :style=>"opacity:0.0; filter:alpha(opacity=0);",:name=> "steal[steal_image]", :onchange=>"hide_image();"}}
          %input{:type => "hidden",:value=>"#{@versus.id}",:name=>"versus_id", :id=>"versus_id"}/
          %input{:type => "hidden",:value=>"",:name=>"removed",:id=>"is_removed"}/
