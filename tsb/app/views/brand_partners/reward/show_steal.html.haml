          %input{:type => "hidden",:value=>"#{ @steal.description || "100 Character max"}",:name=>"steal[description]", :id=>"description_id"}/
          %input{:type => "hidden",:value=>"#{ @steal.code || "15 Character max"}",:name=>"steal[code]", :id=>"code_id"}/
          %input{:type => "hidden",:value=>"#{ @steal.e_commerce_link || "E-commerce link"}",:name=>"steal[e_commerce_link]", :id=>"e_commerce_link_id"}/
          %input{:size => "13", :type => "submit",:value=>"upload",:style=>"margin-left:100px;"}/
